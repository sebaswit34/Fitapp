<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Fitatu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-dumbbell"></i> Fitatu
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <% if (typeof user !== 'undefined' && user) { %>
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link <%= activePage === 'dashboard' ? 'active' : '' %>" href="/dashboard">
                                <i class="fas fa-home"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= activePage === 'menu' ? 'active' : '' %>" href="/menu">
                                <i class="fas fa-utensils"></i> Plan Żywienia
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= activePage === 'measurements' ? 'active' : '' %>" href="/measurements">
                                <i class="fas fa-ruler"></i> Pomiary
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= activePage === 'goals' ? 'active' : '' %>" href="/goals">
                                <i class="fas fa-bullseye"></i> Cele
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user"></i> <%= user.name %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="/logout">
                                        <i class="fas fa-sign-out-alt"></i> Wyloguj
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                <% } else { %>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/login">
                                <i class="fas fa-sign-in-alt"></i> Zaloguj się
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">
                                <i class="fas fa-user-plus"></i> Rejestracja
                            </a>
                        </li>
                    </ul>
                <% } %>
            </div>
        </div>
    </nav>

    <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
        <div class="container mt-3">
            <% messages.forEach(function(message) { %>
                <div class="alert alert-<%= message.type %> alert-dismissible fade show">
                    <%= message.text %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% }); %>
        </div>
    <% } %>
</body>
</html> 